@-webkit-keyframes compass_animation
	0%
		-webkit-transform rotateZ(0deg)
	25%
		-webkit-transform rotateZ(40deg)
	50%
		-webkit-transform rotateZ(0deg)
	75%
		-webkit-transform rotateZ(-40deg)
	100%
		-webkit-transform rotateZ(0deg)

@keyframes compass_animation
	0%
		transform rotateZ(0deg)
	25%
		transform rotateZ(40deg)
	50%
		transform rotateZ(0deg)
	75%
		transform rotateZ(-40deg)
	100%
		transform rotateZ(0deg)

