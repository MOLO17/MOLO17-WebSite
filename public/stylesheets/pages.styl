	position relative
	width 200px
	height 100px
	text-align center
	
	&:hover, &.selected
		margin-top -15px
		margin-left -15px
		border 15px solid lightgrey
		
	&:before, &:after
		content ''
		height 15px
		width 70%
		display block
		position absolute
		background-color white
		margin-left 15%
		
	&:before
		top -15px
	&:after
		bottom -15px
	
	
