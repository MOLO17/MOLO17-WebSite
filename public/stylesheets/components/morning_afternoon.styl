
.morning, .afternoon
	position absolute
	width 100%
	height 100%
	
	
	.sky
		position absolute
		width 100%
		height 80%
		background url('images/morning_afternoon/background_morning-afternoon.png') bottom repeat-x
	

	.wave-1
		z-index 4
		bottom 170px
		background url('images/morning_afternoon/wave_3.svg') 0 0 repeat-x
		
		-webkit-animation-name wave
		-webkit-animation-duration 3s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name wave
		animation-duration 3s
		animation-iteration-count infinite
		animation-timing-function linear

	.wave-2
		bottom 135px
		background url('images/morning_afternoon/wave_2.svg') -42px 0 repeat-x
		z-index 6
		
		-webkit-animation-name waveMedium
		-webkit-animation-duration 2.5s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name waveMedium
		animation-duration 2.5s
		animation-iteration-count infinite
		animation-timing-function linear
		
//------------------------------------BOAT----------------------------------------------------

	.merchant_container
		width 100%
		height 100%
			
	.merchant
		position absolute
		width 300px
		bottom 185px
		right 20px
		padding-bottom 17%
		background url('images/morning_afternoon/merchant.svg') bottom right no-repeat
		background-size 600px
		hoverflow hidden
		z-index 6
			
		&.backwards
			background-position bottom left
		
	.animate_merchant
		webkit-animation: ship_animation 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		animation: ship_animation 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		

	@-webkit-keyframes ship_animation
		0%
			-webkit-transform rotateZ(4deg)
		100%
			-webkit-transform rotateZ(-4deg)

	@keyframes ship_animation
		0%
			transform rotateZ(4deg)
		100%
			transform rotateZ(-4deg)
		
//----------------------------------SUN---------------------------------------------------
	
	.sun
		position absolute
		display block
		width 110px
		height 110px
		left 0
		margin-left -110px
		margin-top 150px
		background-color yellow
		-webkit-border-radius 50%
		-moz-border-radius 50%
		border-radius 50%
		transform-origin 0 400px
		
		
		-webkit-animation-name sun_animation
		-webkit-animation-duration 35s
		-webkit-animation-iteration-count 1
		-webkit-animation-timing-function linear
		-webkit-animation-delay 3s
		animation-name sun_animation
		animation-duration 35s
		animation-iteration-count 1
		animation-timing-function linear
		animation-delay 3s
			
	&.morning
		.sun
			-webkit-animation-direction reverse
			animation-direction reverse
			

	@keyframes sun_animation
	
		0%
			transform rotateZ(100deg)
			background-color red
		100%
			transform rotateZ(0deg)
			background-color yellow
			

	@keyframes sun_animation
	
		0%
			transform rotateZ(0deg)
			background-color yellow
		100%
			transform rotateZ(100deg)
			background-color red
			
