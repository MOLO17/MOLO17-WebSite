
.morning, .afternoon
	position absolute
	overflow hidden
	width 100%
	height 100%
	

	.sky
		position absolute
		width 100%
		height 100%
		overflow hidden
		background url('images/morning_afternoon/background_morning-afternoon.png') bottom repeat-x
		background-size auto 100%
	

	.wave-1
		bottom 138px
		background url('images/morning_afternoon/wave_3.svg') 0 0 repeat-x
		z-index 4
		
		-webkit-animation-name wave
		-webkit-animation-duration 3s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name wave
		animation-duration 3s
		animation-iteration-count infinite
		animation-timing-function linear

	.wave-2
		bottom 115px
		background url('images/morning_afternoon/wave_2.svg') -42px 0 repeat-x
		z-index 6
		
		-webkit-animation-name waveMedium
		-webkit-animation-duration 2.5s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name waveMedium
		animation-duration 2.5s
		animation-iteration-count infinite
		animation-timing-function linear
		
//------------------------------------BOAT----------------------------------------------------
	
	@-webkit-keyframes ship-basculant
		0%
			-webkit-transform rotateZ(4deg)
		100%
			-webkit-transform rotateZ(-4deg)
			
	@-ms-keyframes ship-basculant
		0%
			-ms-transform rotateZ(4deg)
		100%
			-ms-transform rotateZ(-4deg)

	@keyframes ship-basculant
		0%
			transform rotateZ(4deg)
		100%
			transform rotateZ(-4deg)


	.merchant_container
		width 100%
		height 100%
			
	.merchant
		position absolute
		width 300px
		bottom 130px
		right 20px
		padding-bottom 17%
		background url('images/morning_afternoon/merchant.svg') bottom right no-repeat
		background-size 600px
		z-index 6
		hoverflow hidden
			
		&.backwards
			background-position bottom left
			
	@media only screen and (max-width 400px)
		.merchant
			background-size 500px
			width 250px
			height 60px
			bottom 155px
		
	.animate_merchant
		webkit-animation: ship-basculant 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		animation: ship-basculant 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		

//----------------------------------SUN---------------------------------------------------
			
	@-webkit-keyframes sun-animation
	
		0%
			-webkit-transform rotateZ(0deg)
			background-color yellow
		100%
			-webkit-transform rotateZ(100deg)
			background-color red

	@-ms-keyframes sun-animation
	
		0%
			-ms-transform rotateZ(0deg)
			background-color yellow
		100%
			-ms-transform rotateZ(100deg)
			background-color red

	@keyframes sun-animation
	
		0%
			transform rotateZ(0deg)
			background-color yellow
		100%
			transform rotateZ(100deg)
			background-color red


	.sun
		position absolute
		display block
		width 110px
		height 110px
		left 0
		transform-origin 0 400px
		background-color yellow
		-webkit-border-radius 50%
		-moz-border-radius 50%
		border-radius 50%
		margin-left -110px
		margin-top 150px
		
		-webkit-animation-name sun-animation
		-webkit-animation-duration 25s
		-webkit-animation-iteration-count 1
		-webkit-animation-timing-function linear
		-webkit-animation-delay 3s
		animation-name sun-animation
		animation-duration 25s
		animation-iteration-count 1
		animation-timing-function linear
		animation-delay 3s
			
	&.morning
		.sun
			-webkit-animation-direction reverse
			animation-direction reverse
			
