
.evening
	position absolute
	width 100%
	height 100%
	overflow hidden
	
	
	.sky
		position absolute
		width 100%
		height 100%
		overflow hidden
		background url('images/evening/background_evening.png') bottom repeat-x
		background-size auto 100%
	

	.wave-1
		bottom 138px
		background url('images/evening/wave_3.svg') 0 0 repeat-x
		z-index 4
		
		-webkit-animation-name wave
		-webkit-animation-duration 3s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name wave
		animation-duration 3s
		animation-iteration-count infinite
		animation-timing-function linear

	.wave-2
		bottom 115px
		background url('images/evening/wave_2.svg') -42px 0 repeat-x
		z-index 6
		
		-webkit-animation-name waveMedium
		-webkit-animation-duration 2.5s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name waveMedium
		animation-duration 2.5s
		animation-iteration-count infinite
		animation-timing-function linear
		

/*--------------------------SHIP---------------------------------------*/

	.speed-boat_container
		width 100%
		height 100%
			
	.speed-boat
		position absolute
		width 230px
		height 70px
		bottom 130px
		right 20px
		background url('images/evening/yacht.svg') bottom right no-repeat
		background-size 460px
		z-index 6
		overflow hidden
		
		&.backwards
			background-position bottom left
			
	@media only screen and (max-width 400px)
		.speed-boat
			background-size 350px
			width 175px
			height 55px
			bottom 155px
		
	.animate_speed-boat
		webkit-animation: ship-basculant 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		animation: ship-basculant 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		

	@-webkit-keyframes ship-basculant
		0%
			-webkit-transform translate3d(8%,0,0) rotateZ(6deg)
		100%
			-webkit-transform translate3d(-8%,0,0) rotateZ(-6deg)
			
	@-ms-keyframes ship-basculant
		0%
			-ms-transform translate3d(8%,0,0) rotateZ(6deg)
		100%
			-ms-transform translate3d(-8%,0,0) rotateZ(-6deg)

	@keyframes ship-basculant
		0%
			transform translate3d(8%,0,0) rotateZ(6deg)
		100%
			transform translate3d(-8%,0,0) rotateZ(-6deg)
		

