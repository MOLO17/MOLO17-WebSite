/*--------------------------SHIP---------------------------------------*/

@-webkit-keyframes ship-main
	0%
		-webkit-transform translate3d(5%,0,0) rotateZ(5deg)
	100%
		-webkit-transform translate3d(-5%,0,0) rotateZ(-5deg)

@keyframes ship-main
	0%
		transform translate3d(5%,0,0) rotateZ(5deg)
	100%
		transform translate3d(-5%,0,0) rotateZ(-5deg)
		
.ship_1
	width 15%
	padding-bottom 17%
	position absolute
	bottom 62px
	right 0
	background url('images/ship_1.png') bottom left no-repeat
	background-size contain
	z-index -1
		
.animate_ship
	webkit-animation: ship-main 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
	animation: ship-main 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)

.rotateY
	webkit-transform: rotateY(150deg)
	transform: rotateY(150deg)
.rotateY_back
	webkit-transform: rotateY(-150deg)
	transform: rotateY(-150deg)
