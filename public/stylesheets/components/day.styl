	/*--------------------------SHIP---------------------------------------*/

	@-webkit-keyframes ship-basculant
		0%
			-webkit-transform translate3d(5%,0,0) rotateZ(4deg)
		100%
			-webkit-transform translate3d(-5%,0,0) rotateZ(-4deg)

	@keyframes ship-basculant
		0%
			transform translate3d(5%,0,0) rotateZ(4deg)
		100%
			transform translate3d(-5%,0,0) rotateZ(-4deg)
			

	.ship_container
		width 100%
		height 100%
			
	.sailboat
		width 100px
		height 200px
		position absolute
		bottom 185px
		right 20px
		background url('images/day/sailboat.svg') bottom right no-repeat
		background-size 200px
		z-index 6
		overflow hidden
		
		&.backwards
			background-position bottom left
		
	.animate_sailboat
		webkit-animation: ship-basculant 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		animation: ship-basculant 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
	

	/*-----------------------------------------BIRDS---------------------------------------------------*/
		
	.seagulls
		width 100%
		height 100%
		display block
		position absolute
		bottom 0
		overflow hidden

	.seagull 
		display block
		position absolute
		
		&.animate-transition
			-webkit-transition transform 12s linear
			-moz-transition transform 12s linear
			transition transform 12s linear
		

	.seagull_1
		background url('images/day/seagull_1.svg') 0 0 no-repeat
		width 45px
		height 83px
		left 120px
