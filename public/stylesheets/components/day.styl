	/*--------------------------SHIP---------------------------------------*/


			
	.ship_container
		width 100%
		height 100%
			
	.ship_1
		width 10%
		padding-bottom 17%
		position absolute
		bottom 202px
		right 20px
		background url('images/boat.svg') bottom left no-repeat
		background-size contain
		z-index 5
		hoverflow hidden
		
	.animate_ship
		webkit-animation: ship-main 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		animation: ship-main 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)

	.rotateY
		webkit-transform: rotateY(150deg)
		transform: rotateY(150deg)
		
	.rotateY_back
		webkit-transform: rotateY(-150deg)
		transform: rotateY(-150deg)

