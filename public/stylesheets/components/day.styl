.day
	width 100%
	height 100%
	overflow hidden
	position absolute
	
	.sky
		position absolute
		width 100%
		height 90%
		overflow hidden
		background url('images/day/background_day.png') bottom repeat-x
	
	.wave-1
		z-index 4
		bottom 160px
		background url('images/day/wave_3.svg') 0 0 repeat-x
		-webkit-animation-name wave
		-webkit-animation-duration 5s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name wave
		animation-duration 5s
		animation-iteration-count infinite
		animation-timing-function linear

	.wave-2
		z-index 6
		bottom 140px
		background url('images/day/wave_2.svg') -42px 0 repeat-x
		-webkit-animation-name waveMedium
		-webkit-animation-duration 3.5s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name waveMedium
		animation-duration 3.5s
		animation-iteration-count infinite
		animation-timing-function linear

	/*----------------------------------CLOUDS-----------------------------------------*/


	@-webkit-keyframes cloud
		0%
			-webkit-transform rotateZ(0deg) translate3d(0,40%,0) rotateZ(0deg)
		100%
			-webkit-transform rotateZ(360deg) translate3d(0,40%,0) rotateZ(-360deg)

	@keyframes cloud
		0%
			transform rotateZ(0deg) translate3d(0, 40%, 0) rotateZ(0deg)
		100%
			transform rotateZ(360deg) translate3d(0, 40%, 0) rotateZ(-360deg)

	@-webkit-keyframes cloud_inverse
		0%
			-webkit-transform rotateZ(0deg) translate3d(0,50%,0) rotateZ(0deg)
		100%
			-webkit-transform rotateZ(360deg) translate3d(0,50%,0) rotateZ(-360deg)

	@keyframes cloud_inverse
		0%
			transform rotateZ(0deg) translate3d(0, 50%, 0) rotateZ(0deg)
		100%
			transform rotateZ(-360deg) translate3d(0, 50%, 0) rotateZ(360deg)
			

	@-webkit-keyframes cloudSmall
		0%
			-webkit-transform rotateZ(0deg) translate3d(0, 30%, 0) rotateZ(0deg)
		100%
			-webkit-transform rotateZ(360deg) translate3d(0, 30%, 0) rotateZ(-360deg)

	@keyframes cloudSmall
		0%
			transform rotateZ(0deg) translate3d(0, 30%, 0) rotateZ(0deg)
		100%
			transform rotateZ(360deg) translate3d(0, 30%, 0) rotateZ(-360deg)

	.cloud_1
