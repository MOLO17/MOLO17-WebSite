	/*--------------------------SHIP---------------------------------------*/

	.sailboat_container
		width 100%
		height 100%
			
	.sailboat
		width 15%
		padding-bottom 17%
		position absolute
		bottom 185px
		right 20px
		background url('images/day/sailboat.svg') bottom left no-repeat
		background-size contain
		z-index 6
		hoverflow hidden
		//clip rect 0px 10px 10px 0px
		
	.animate_sailboat
		webkit-animation: ship-main 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		animation: ship-main 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
	
	.rotateY
		webkit-transform: rotateY(150deg)
		transform: rotateY(150deg)
		
	.rotateY_back
		webkit-transform: rotateY(-150deg)
		transform: rotateY(-150deg)

