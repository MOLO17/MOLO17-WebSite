.search-offert-filters-button
	cursor pointer
	min-width 70px
	box-sizing(border-box)
	padding-right 25px
	position relative

	md-icon
		position absolute
		top 3px
		right 5px

.search-offert-filters-menu
	background white
	border-radius(0px 0px 4px 4px)
	box-shadow 0 7px 8px -4px rgba(0, 0, 0, 0.2),0 13px 19px 2px rgba(0, 0, 0, 0.14),0 5px 24px 4px rgba(0, 0, 0, 0.12)
	width auto
	margin-top 5px

.search-offert-filters-menu-item

	color #666
	align-items center
	cursor pointer
	display flex
	height 30px
	font-size 13px
	padding 0 15px
	min-width 125px
	position relative
	transition background 0.15s linear
	width auto

	&:hover
	&:focus
		color #004c98
		background-color #eee

	&.selected
		color rgb(16, 108, 200)