	.animate_cruise-ship
		webkit-animation: ship-basculant 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		animation: ship-basculant 1.8s infinite alternate cubic-bezier(0.455, .03, .515, .955)
		
	.cruise_ship_lights
		color black
	
	
//-----------------------------------STARS----------------------------------------------------		

	.comet
		position absolute
		width 100px
		height 100px
		top -110px
		right 250px
		background url('images/night/comet.gif') no-repeat
		background-size contain
		overflow hidden
		transform rotate(30deg)
		
		-webkit-animation-name star-animation
		-webkit-animation-duration 6s
		-webkit-animation-iteration-count 1
		-webkit-animation-timing-function linear
		-webkit-animation-delay 5s
		animation-name star-animation
		animation-duration 6s
		animation-iteration-count 1
		animation-timing-function linear
		animation-delay 5s

	@-webkit-keyframes star-animation 
		0%
			right 250px 
			top -110px
		100% 
			right 2300px 
			top 400px
			
	@-ms-keyframes star-animation 
		0%
			right 250px 
			top -110px
		100% 
			right 2300px 
			top 400px

	@keyframes star-animation 
		0%
			right 250px 
			top -110px
		100% 
			right 2300px 
			top 400px
			
