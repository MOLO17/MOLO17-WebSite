
.night
	position absolute
	width 100%
	height 100%
	overflow hidden
	

	.sky
		position absolute
		width 100%
		height 95%
		overflow hidden
		background url('images/night/background_night.png') bottom repeat-x
		background-size auto 100%
	

	.wave-1
		bottom 138px
		background url('images/night/wave_3.svg') 0 0 repeat-x
		z-index 4
		
		-webkit-animation-name wave
		-webkit-animation-duration 3s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name wave
		animation-duration 3s
		animation-iteration-count infinite
		animation-timing-function linear

	.wave-2
		bottom 115px
		background url('images/night/wave_2.svg') -42px 0 repeat-x
		z-index 6
		
		-webkit-animation-name waveMedium
		-webkit-animation-duration 2.5s
		-webkit-animation-iteration-count infinite
		-webkit-animation-timing-function linear
		animation-name waveMedium
		animation-duration 2.5s
		animation-iteration-count infinite
		animation-timing-function linearnight
		
//----------------------------------------BOAT----------------------------------------------
	
	@-webkit-keyframes ship-basculant
		0%
			-webkit-transform translate3d(5%,0,0) rotateZ(2deg)
		100%
			-webkit-transform translate3d(-5%,0,0) rotateZ(-2deg)
			
	@-ms-keyframes ship-basculant
		0%
			-ms-transform translate3d(5%,0,0) rotateZ(2deg)
		100%
			-ms-transform translate3d(-5%,0,0) rotateZ(-2deg)

	@keyframes ship-basculant
		0%
			transform translate3d(5%,0,0) rotateZ(2deg)
		100%
			transform translate3d(-5%,0,0) rotateZ(-2deg)
			

	.cruise-ship_container
		width 100%
		height 100%
			
	.cruise-ship
		position absolute
		width 350px
		height 200px
		padding-bottom 17%
		bottom 132px
		right 20px
		background url('images/night/cruise_ship.svg') bottom right no-repeat
		background-size 700px
		z-index 6
		hoverflow hidden
		
		&.backwards
			background-position bottom left
			
